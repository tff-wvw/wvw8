<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Int - 1 Строка" HorizontalAlignment="Left"   Grid.Row="5" FontSize="30"/>
        <TextBlock Text="Long - 2 Строка" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" FontSize="30"/>
        <TextBlock Text="Short - 3 Строка" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="5" FontSize="30"/>

        <TextBox x:Name="intTextBox" Grid.Row="0" FontSize="30"/>
        <TextBox x:Name="longTextBox" Grid.Row="1" FontSize="30"/>
        <TextBox x:Name="shortTextBox" Grid.Row="2" FontSize="30"/>
        <Button Content="Проверка данных" Click="CheckData" Grid.Row="3" FontSize="30"/>
    </Grid>
</Window>
